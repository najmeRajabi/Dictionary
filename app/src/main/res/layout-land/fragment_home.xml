<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeFragment">


        <TextView
            android:id="@+id/txv_fa_en_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:minHeight="30dp"
            android:text="@string/english"
            app:layout_constraintEnd_toStartOf="@id/imv_change_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imv_change_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_sync_alt_24"
            app:layout_constraintEnd_toStartOf="@id/txv_fa_en_right"
            app:layout_constraintStart_toEndOf="@id/txv_fa_en_left"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txv_fa_en_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:minHeight="30dp"
            android:text="@string/persian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imv_change_mode"
            app:layout_constraintTop_toTopOf="parent" />

        <SearchView
            android:id="@+id/search_view_home"
            style="@style/txv_home_style"
            android:background="@drawable/bg_circle"
            android:minHeight="54dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imv_change_mode" />

        <TextView
            android:id="@+id/txv_en"
            style="@style/txv_home_style"
            android:layout_width="328dp"
            android:layout_height="52dp"
            android:text="@string/english"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_view_home" />

        <TextView
            android:id="@+id/txv_fa"
            style="@style/txv_home_style"
            android:layout_width="337dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:text="@string/persian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txv_en"
            app:layout_constraintTop_toBottomOf="@+id/search_view_home" />

        <TextView
            android:id="@+id/txv_synonyms"
            style="@style/txv_home_style"
            android:text="@string/synonyms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_fa" />

        <TextView
            android:id="@+id/txv_example"
            style="@style/txv_home_style"
            android:text="@string/example"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_synonyms" />

        <ImageButton
            android:id="@+id/imv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/bg_circle"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:src="@drawable/before"
            app:layout_constraintEnd_toStartOf="@+id/imv_next"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_example" />

        <ImageButton
            android:id="@+id/imv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/bg_circle"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:src="@drawable/next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imv_back"
            app:layout_constraintTop_toBottomOf="@id/txv_example" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/purple_200"
            android:src="@drawable/add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>